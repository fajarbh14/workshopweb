<form action="dataa/update/<%= dataa.id %>" method="post">
    <div class="mb-3">
        <label class="form-label pt-0" for="nim">NIM</label>
        <input class="form-control" id="nim" name="nim" type="text" value="<%= dataa.nim %>" required />
    </div>
    <div class="mb-3">
        <label class="form-label pt-0" for="nama">Nama</label>
        <input class="form-control" id="nama" name="nama" type="text" value="<%= dataa.nama %>" required />
    </div>
    <div class="d-flex flex-row-reverse">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>
