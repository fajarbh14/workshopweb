<form action="contacts/update/<%= contacts.id %>" method="post">
  <div class="mb-3">
    <label class="form-label pt-0" for="email">Email</label>
    <input class="form-control" id="email" name="email" type="text" value="<%= contacts.email %>" required />
  </div>
  <div class="mb-3">
    <label class="form-label pt-0" for="nohp">No Handphone</label>
    <input class="form-control" id="nohp" name="nohp" type="text" value="<%= contacts.nohp %>" required />
  </div>
  <div class="d-flex flex-row-reverse">
    <button class="btn btn-primary" type="submit">Save</button>
  </div>
</form>
