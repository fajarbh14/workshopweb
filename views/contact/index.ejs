<%- include('../includes/header'); %>

<div class="container">
  <h2>All Contacts</h2>
  <li>
    <a class="btn btn-primary btn-sm" href="#" onclick="openForm('contacts/create', 'create')"> <span class="me-3"> Create</span></a>
  </li>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>No Handphone</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% no = 1 
      contacts.forEach(contact => { %>
      <tr>
        <td><%= no++ %></td>
        <td><%= contact.email %></td>
        <td><%= contact.nohp %></td>
        <td>
          <a onclick="openForm('/contacts/edit/<%= contact.id %>', 'create')">
            <button class="btn btn-primary">Edit</button>
          </a>
          <a href="/contacts/delete/<%= contact.id %>">
            <button class="btn btn-danger">Delete</button>
          </a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
<%- include('../includes/footer'); %>
