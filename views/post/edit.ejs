<form action="posts/update/<%= posts.id %>" method="post">
    <div class="mb-3">
        <label class="form-label pt-0" for="title">Title</label>
        <input class="form-control" id="title" name="title" type="text" value="<%= posts.title %>" required />
    </div>
    <div class="mb-3">
        <label class="form-label pt-0" for="content">Content</label>
        <input class="form-control" id="content" name="content" type="text" value="<%= posts.content %>" required />
    </div>
    <div class="d-flex flex-row-reverse">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>
